<h1> List of all Articles</h1>

<% if @articles.blank? %>
    <p align="center">Articles were not found</p>
<% else %>
    <ul id="articles">
      <% @articles.each do |article| %>
          <li>
            <%= link_to article.title, article_path(article),
                        class: "article_title", id: "article_#{article.id}" %>
          </li>
      <% end %>
    </ul>
<% end %>

<%= link_to "Create Article", new_article_path, class: "new_article" %>
